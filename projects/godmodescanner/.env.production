# ============================================================
# GODMODESCANNER - Production Configuration
# ============================================================
# Authenticated RPC Endpoints (Recommended)
# Replace placeholders with your actual API keys
# ============================================================

# Helius (Recommended - High quota, low latency)
# Get API key: https://dev.helius.xyz/
RPC_HELIUS=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY

# Triton (Alternative - Fast, reliable)
# Get API key: https://triton.one/
RPC_TRITON=https://mainnet.triton.one/YOUR_TRITON_API_KEY

# QuickNode (Enterprise - High reliability)
# Get API key: https://www.quicknode.com/
RPC_QUICKNODE=https://YOUR_ENDPOINT.quiknode.pro/YOUR_API_KEY/solana

# ============================================================
# RPC Configuration
# ============================================================

# Active endpoints (comma-separated)
# Format: provider1,provider2,provider3
# For production, use authenticated endpoints only
RPC_ENDPOINTS=${RPC_HELIUS},${RPC_TRITON},${RPC_QUICKNODE}

# Fallback free endpoints (use only if auth endpoints fail)
RPC_FALLBACK=https://api.mainnet-beta.solana.com,https://solana-api.projectserum.com

# ============================================================
# WebSocket Configuration
# ============================================================

# Primary WebSocket endpoint
WS_ENDPOINTS=wss://api.mainnet-beta.solana.com

# Alternative: Use Helius WebSocket
# WS_HELIUS=wss://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY

# ============================================================
# AggressiveSolanaClient Configuration
# ============================================================

# Rate limiting settings
RPC_INITIAL_RPS=20.0        # Start at 20 requests/second
RPC_MAX_RPS=100.0            # Maximum 100 requests/second
RPC_GROWTH_THRESHOLD=100    # Grow after 100 consecutive successes
RPC_MAX_RETRIES=3           # Retry failed requests 3 times
RPC_CACHE_MAXSIZE=5000       # Cache 5000 recent responses

# Request batching
RPC_BATCH_SIZE=50            # Up to 50 requests per batch
RPC_MAX_CONCURRENT=100       # Max concurrent connections

# Timeout settings
RPC_REQUEST_TIMEOUT=30      # Request timeout in seconds
RPC_CONNECT_TIMEOUT=10     # Connection timeout in seconds

# ============================================================
# Redis Configuration (Guerrilla Cluster)
# ============================================================

# Redis Cluster (recommended for production)
REDIS_URL=redis://127.0.0.1:16379
REDIS_PASSWORD=

# Alternative: Single Redis instance
# REDIS_URL=redis://127.0.0.1:6379

# ============================================================
# TimescaleDB Configuration
# ============================================================

TIMESCALE_URL=postgresql://godmodescanner:password@172.17.0.1:5432/godmodescanner
TIMESCALE_USER=godmodescanner
TIMESCALE_PASSWORD=password
TIMESCALE_DB=godmodescanner

# ============================================================
# Qdrant Vector DB (for memory)
# ============================================================

QDRANT_URL=http://localhost:6333

# ============================================================
# pump.fun Program ID
# ============================================================

PUMPFUN_PROGRAM_ID=6EF8rrecthR5Dkzon8Nwu78hRvfCKubJ14M5uBEwF6P

# ============================================================
# Agent Configuration
# ============================================================

LOG_LEVEL=INFO
BATCH_SIZE=100
MAX_WORKERS=4

# ============================================================
# RPC Enrichment Settings
# ============================================================

# Enable/disable RPC enrichment in transaction monitor
# Set to 'false' to use WebSocket-only mode (lower latency, less data)
ENABLE_RPC_ENRICHMENT=true

# Number of accounts to enrich per transaction
ENRICHMENT_MAX_ACCOUNTS=10

# ============================================================
# Performance Targets
# ============================================================

# Detection latency (milliseconds)
TARGET_DETECTION_LATENCY_MS=500

# Events per second
TARGET_EVENTS_PER_SECOND=100

# Cache performance
TARGET_CACHE_HIT_RATE=0.60

# Success rate
TARGET_SUCCESS_RATE=0.99

# Average latency (milliseconds)
TARGET_AVG_LATENCY_MS=100

# ============================================================
# Alert Settings (Optional)
# ============================================================

# Telegram alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord alerts
DISCORD_WEBHOOK_URL=

# Email alerts
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=

# ============================================================
# Monitoring & Metrics
# ============================================================

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Health check endpoint
HEALTH_CHECK_PORT=8080

# Metrics interval (seconds)
METRICS_INTERVAL=5

# ============================================================
# Development/Debugging
# ============================================================

# Enable debug logging (not recommended in production)
DEBUG=false

# Trace RPC requests (useful for debugging)
TRACE_RPC=false

# ============================================================
