version: '3.8'
services:
  redis:
    image: redis:8.0-alpine
    container_name: godmode_redis
    ports:
    - 6379:6379
    volumes:
    - redis_data:/data
    command: redis-server --appendonly yes
    healthcheck:
      test:
      - CMD
      - redis-cli
      - ping
      interval: 10s
      timeout: 3s
      retries: 3
    networks:
    - godmode_network
    restart: unless-stopped
  orchestrator:
    build:
      context: .
      dockerfile: docker/Dockerfile.orchestrator
    container_name: godmode_orchestrator
    depends_on:
      redis:
        condition: service_healthy
    environment:
    - REDIS_URL=redis://redis:6379
    - ORCHESTRATOR_ID=orchestrator_main
    - DOCKER_HOST=unix:///var/run/docker.sock
    volumes:
    - /var/run/docker.sock:/var/run/docker.sock
    - ./config:/app/config:ro
    - ./logs:/app/logs
    - ./data:/app/data
    networks:
    - godmode_network
    restart: unless-stopped
    logging:
      driver: json-file
      options:
        max-size: 10m
        max-file: '3'
  supervisor:
    build:
      context: .
      dockerfile: docker/Dockerfile.supervisor
    container_name: godmode_supervisor_primary
    depends_on:
      redis:
        condition: service_healthy
    environment:
    - REDIS_URL=redis://redis:6379
    - SUPERVISOR_ID=supervisor_primary
    - DOCKER_HOST=unix:///var/run/docker.sock
    - SPAWN_MODE=docker
    volumes:
    - /var/run/docker.sock:/var/run/docker.sock
    - ./config:/app/config:ro
    - ./logs:/app/logs
    - ./data:/app/data
    networks:
    - godmode_network
    restart: unless-stopped
    logging:
      driver: json-file
      options:
        max-size: 10m
        max-file: '3'
  pumpfun-stream:
    build:
      context: .
      dockerfile: docker/Dockerfile.pumpfun-stream
    container_name: godmode-pumpfun-stream
    restart: unless-stopped
    depends_on:
      redis:
        condition: service_healthy
    environment:
    - REDIS_URL=redis://redis:6379
    - BLOXROUTE_WS_URL=wss://pump-ny.solana.dex.blxrbdn.com/ws
    - BLOXROUTE_AUTH_TOKEN=${BLOXROUTE_AUTH_TOKEN:-}
    - PYTHONUNBUFFERED=1
    volumes:
    - ./logs:/app/logs
    - ./data:/app/data
    networks:
    - godmode_network
    logging:
      driver: json-file
      options:
        max-size: 10m
        max-file: '3'
    deploy:
      resources:
        limits:
          memory: 512M
    healthcheck:
      test:
      - CMD
      - python
      - -c
      - import redis, os; r = redis.from_url(os.getenv('REDIS_URL', 'redis://redis:6379'));
        r.ping()
      interval: 30s
      timeout: 10s
      start_period: 40s
      retries: 3
  jaeger:
    image: jaegertracing/all-in-one:latest
    container_name: godmode_jaeger
    profiles:
    - monitoring
    ports:
    - 16686:16686
    - 6831:6831/udp
    - 14268:14268
    - 14250:14250
    environment:
    - COLLECTOR_ZIPKIN_HOST_PORT=:9411
    - COLLECTOR_OTLP_ENABLED=true
    networks:
    - godmode_network
    restart: unless-stopped
    logging:
      driver: json-file
      options:
        max-size: 10m
        max-file: '3'
  agent-template:
    build:
      context: .
      dockerfile: docker/Dockerfile.agent-template
    image: godmode/agent-template:latest
    profiles:
    - dynamic
    environment:
    - REDIS_URL=redis://redis:6379
    - AGENT_ID=${AGENT_ID}
    - AGENT_TYPE=${AGENT_TYPE}
    - SUPERVISOR_ID=${SUPERVISOR_ID}
    volumes:
    - ./config:/app/config:ro
    - ./logs:/app/logs
    - ./data:/app/data
    networks:
    - godmode_network
    restart: 'no'
  transaction-monitor-template:
    build:
      context: .
      dockerfile: docker/Dockerfile.transaction-monitor
    image: godmode/transaction-monitor:latest
    profiles:
    - dynamic
    environment:
    - REDIS_URL=redis://redis:6379
    - AGENT_ID=${AGENT_ID}
    - AGENT_TYPE=transaction_monitor
    - SUPERVISOR_ID=${SUPERVISOR_ID}
    volumes:
    - ./config:/app/config:ro
    - ./logs:/app/logs
    - ./data:/app/data
    networks:
    - godmode_network
    restart: 'no'
  wallet-analyzer-template:
    build:
      context: .
      dockerfile: docker/Dockerfile.wallet-analyzer
    image: godmode/wallet-analyzer:latest
    profiles:
    - dynamic
    environment:
    - REDIS_URL=redis://redis:6379
    - AGENT_ID=${AGENT_ID}
    - AGENT_TYPE=wallet_analyzer
    - SUPERVISOR_ID=${SUPERVISOR_ID}
    volumes:
    - ./config:/app/config:ro
    - ./logs:/app/logs
    - ./data:/app/data
    networks:
    - godmode_network
    restart: 'no'
  pattern-recognition-template:
    build:
      context: .
      dockerfile: docker/Dockerfile.pattern-recognition
    image: godmode/pattern-recognition:latest
    profiles:
    - dynamic
    environment:
    - REDIS_URL=redis://redis:6379
    - AGENT_ID=${AGENT_ID}
    - AGENT_TYPE=pattern_recognition
    - SUPERVISOR_ID=${SUPERVISOR_ID}
    volumes:
    - ./config:/app/config:ro
    - ./logs:/app/logs
    - ./data:/app/data
    - ./data/models:/app/data/models
    networks:
    - godmode_network
    restart: 'no'
  prometheus:
    image: prom/prometheus:latest
    container_name: godmode_prometheus
    profiles:
    - monitoring
    ports:
    - 9090:9090
    volumes:
    - ./config/prometheus.yml:/etc/prometheus/prometheus.yml:ro
    - prometheus_data:/prometheus
    command:
    - --config.file=/etc/prometheus/prometheus.yml
    - --storage.tsdb.path=/prometheus
    networks:
    - godmode_network
    restart: unless-stopped
  grafana:
    image: grafana/grafana:latest
    container_name: godmode_grafana
    profiles:
    - monitoring
    ports:
    - 3000:3000
    environment:
    - GF_SECURITY_ADMIN_PASSWORD=admin
    - GF_USERS_ALLOW_SIGN_UP=false
    volumes:
    - grafana_data:/var/lib/grafana
    depends_on:
    - prometheus
    networks:
    - godmode_network
    restart: unless-stopped
  timescaledb:
    image: timescale/timescaledb:latest-pg16
    container_name: godmode_timescaledb
    environment:
    - POSTGRES_USER=godmodescanner
    - POSTGRES_PASSWORD=Z8vZ1bCVLtr04bBUZfEtzgqYLmS9xUjh
    - POSTGRES_DB=godmodescanner
    ports:
    - 5432:5432
    volumes:
    - timescaledb_data:/var/lib/postgresql/data
    networks:
    - godmode_network
    restart: unless-stopped
    healthcheck:
      test:
      - CMD-SHELL
      - pg_isready -U godmodescanner -d godmodescanner
      interval: 10s
      timeout: 5s
      retries: 5
    logging:
      driver: json-file
      options:
        max-size: 10m
        max-file: '3'
networks:
  godmode_network:
    driver: bridge
    ipam:
      config:
      - subnet: 172.28.0.0/16
volumes:
  redis_data:
    driver: local
  prometheus_data:
    driver: local
  grafana_data:
    driver: local
  timescaledb_data:
    driver: local
