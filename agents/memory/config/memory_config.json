{
  "storage": {
    "backend": "hybrid",
    "storage_path": "/a0/usr/projects/godmodescanner/data/memory",
    "enable_disk_persistence": true,
    "enable_vector_search": true
  },
  "consolidation": {
    "enabled": true,
    "consolidation_interval_hours": 24,
    "importance_decay_rate": 0.95,
    "min_importance_to_keep": 1,
    "max_memories": 10000,
    "pattern_detection_enabled": true
  },
  "query": {
    "enable_semantic_search": true,
    "rerank_results": true,
    "max_results": 20,
    "similarity_threshold": 0.7,
    "embedding_model": "sentence-transformers/all-MiniLM-L6-v2"
  },
  "memory_types": {
    "episodic": {
      "enabled": true,
      "max_age_days": 90,
      "importance_weight": 1.0
    },
    "semantic": {
      "enabled": true,
      "max_age_days": 365,
      "importance_weight": 1.2
    },
    "procedural": {
      "enabled": true,
      "max_age_days": 365,
      "importance_weight": 1.5
    },
    "pattern": {
      "enabled": true,
      "max_age_days": 180,
      "importance_weight": 1.3
    },
    "wallet": {
      "enabled": true,
      "max_age_days": 30,
      "importance_weight": 1.0
    },
    "token": {
      "enabled": true,
      "max_age_days": 30,
      "importance_weight": 1.0
    }
  },
  "performance": {
    "batch_insert_size": 100,
    "cache_frequent_queries": true,
    "async_operations": true
  }
}